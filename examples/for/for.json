{
  "$schema": "https://stencila.dev/Article.schema.json",
  "type": "Article",
  "content": [
    {
      "type": "Paragraph",
      "content": [
        {
          "type": "Text",
          "value": "A simple for loop"
        }
      ]
    },
    {
      "type": "For",
      "symbol": "item",
      "code": "[1,2,3]",
      "content": [
        {
          "type": "Paragraph",
          "content": [
            {
              "type": "Text",
              "value": "This paragraph will be repeated with a different value for "
            },
            {
              "type": "CodeExpression",
              "code": "item"
            }
          ]
        }
      ]
    },
    {
      "type": "Paragraph",
      "content": [
        {
          "type": "Text",
          "value": "With a programming language specified"
        }
      ]
    },
    {
      "type": "For",
      "symbol": "item",
      "programmingLanguage": "python",
      "code": "[1,2,3]",
      "content": [
        {
          "type": "Paragraph",
          "content": [
            {
              "type": "Text",
              "value": "This content is repeated"
            }
          ]
        }
      ]
    },
    {
      "type": "Paragraph",
      "content": [
        {
          "type": "Text",
          "value": "Nested for loops"
        }
      ]
    },
    {
      "type": "For",
      "symbol": "outer",
      "code": "[['a', 'b'], ['c', 'd']]",
      "content": [
        {
          "type": "For",
          "symbol": "inner",
          "code": "outer",
          "content": [
            {
              "type": "Paragraph",
              "content": [
                {
                  "type": "Text",
                  "value": "This paragraph will be repeated for each inner item "
                },
                {
                  "type": "CodeExpression",
                  "code": "inner"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Paragraph",
      "content": [
        {
          "type": "Text",
          "value": "With an else clause"
        }
      ]
    },
    {
      "type": "For",
      "symbol": "item",
      "code": "[]",
      "content": [
        {
          "type": "Paragraph",
          "content": [
            {
              "type": "Text",
              "value": "This content is never shown"
            }
          ]
        }
      ],
      "otherwise": [
        {
          "type": "Paragraph",
          "content": [
            {
              "type": "Text",
              "value": "There are no items"
            }
          ]
        }
      ]
    },
    {
      "type": "Paragraph",
      "content": [
        {
          "type": "Text",
          "value": "With no content in 'content' or 'otherwise'"
        }
      ]
    },
    {
      "type": "For",
      "symbol": "item",
      "code": "[]",
      "content": [],
      "otherwise": []
    }
  ]
}
