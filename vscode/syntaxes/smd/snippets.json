{
  "Figure": {
    "description": "Insert a figure with a label and/or caption",
    "prefix": ["::: figure"],
    "body": ["::: figure ${1:label}", "", "${2:caption}", "", "$0", "", ":::"]
  },
  "Table": {
    "description": "Insert a table with a label and/or caption",
    "prefix": ["::: table"],
    "body": ["::: table ${1:label}", "", "${2:caption}", "", "$0", "", ":::"]
  },
  "Include Block": {
    "description": "Include block content from another document",
    "prefix": ["::: include"],
    "body": ["::: include ${1}"]
  },
  "Create Command": {
    "description": "Command to create new content",
    "prefix": ["::: create"],
    "body": ["::: create ${0} :::"]
  },
  "Edit Command": {
    "description": "Command to edit existing content",
    "prefix": ["::: edit"],
    "body": ["::: edit ${0} >>>"]
  },
  "Fix Command": {
    "description": "Command to fix code or math",
    "prefix": ["::: fix"],
    "body": ["::: fix ${0} >>>"]
  },
  "Describe Command": {
    "description": "Command to describe existing content",
    "prefix": ["::: describe"],
    "body": ["::: describe ${0} :::"]
  }
}
